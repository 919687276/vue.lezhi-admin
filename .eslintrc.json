{
    "env": {
        "commonjs": true,
        "es6": true,
        "node": true
    },
    "extends": "eslint:recommended",
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
    },
    "parserOptions": {
        "ecmaVersion": 2018
    },
    "rules": {
      "no-irregular-whitespace": 2,
      "no-var": "error", // 禁用var，用let和const代替
      "key-spacing": [2, { "beforeColon": false, "afterColon": true }],
        "indent": [
            "error",
            2
        ],
        "linebreak-style": [
            "error",
            "unix"
        ],
        "quotes": [
            "error",
            "single"
        ], // 强制使用一致的单引号
        "semi": [
            "error",
            "always"
        ]
    }
}